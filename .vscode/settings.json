{
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[css]": {
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  // 开启eslint、stylelint自动修复
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  // 关闭编辑器内置样式检查（避免与stylelint冲突）
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  // 配置stylelint检查的文件类型范围
  "stylelint.validate": ["css", "less", "vue"],
  "cSpell.words": [
    "Encs",
    "Checkeds",
    "Authowner",
    "sider",
    "Axios",
    "demooperator",
    "unref",
    "vueuse",
    "Popconfirm",
    "yapi",
    "nrwl",
    "Miniprogram",
    "JSAPI",
    "jssdk",
    "Symbian",
    "Cust",
    "WXSDK",
    "Pinia",
    "retdata",
    "retmsg",
    "vite",
    "vitejs",
    "Antd"
  ],
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
